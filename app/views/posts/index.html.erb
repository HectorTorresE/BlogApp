<div class="flex my-3 rounded-md border border-zinc-300">
  <img src="<%= @user.photo %>" class="w-1/5 rounded-l-md"/>
  <div class="w-4/5 px-2 pt-4 flex flex-col">
    <h2 class="text-2xl font-bold text-sky-600 hover:text-sky-700"><%= link_to @user.name, @user %></h2>
    <p class="text-sm text-right w-full font-bold">Number of Posts:
      <%= @user.posts.count %></p>
  </div>
</div>
<% @posts.each do |post| %>
  <div class="rounded-md border border-zinc-300 p-2 mb-4 bg-white/60">
    <h2 class="font-semibold text-md text-sky-600 hover:text-sky-700 underline underline-offset-2"><%= link_to post.title, [@user, post] %></h2>
    <p class="text-sm truncate my-2"><%= post.text %></p>
    <p class="text-right text-sm font-bold">Comments:
      <%= post.commentscounter %>
      Likes:
      <%= post.likescounter %></p>
    <% unless post.commentscounter == 0 %>
      <hr>
      <h4 class="font-semibold mt-4">Most recent comments:</h4>
      <ul class="my-3">
        <% post.comments.take(5).each do |comment| %>
          <li class="text-sm my-2">
            <span class="font-semibold"><%= comment.author.name %></span> says: <%= comment.text %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
<% end %>